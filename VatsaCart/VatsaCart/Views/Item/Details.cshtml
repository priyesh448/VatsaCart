@model Items

<h2>@Model.ItemName</h2>

<div class="thumbnail">
    <img alt="@Model.ItemName" src="@Model.ImageUrl">
    <div class="caption-full">
        <h3 class="pull-right">@Model.Price</h3>
        <h3>
            <a href="#">@Model.ItemName</a>
        </h3>
        <h4>@Model.ShortDescription</h4>
        <p>@Model.LongDescription</p>
    </div>
</div>